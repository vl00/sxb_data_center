            }, sec);
            setTimeout(callback, sec);
        }

        //显示消息
        function showMsg(msg, callback) {
            Modal.alert({
                title: '提示',
                msg: msg,
                btnok: '确定'
            }).on(function (e) {
                if (callback) {
                    callback();
                }
            });
        }

        function CloseLoading() {
