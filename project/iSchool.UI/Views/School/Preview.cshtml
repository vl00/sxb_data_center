                function getData() {
                    if (loadFlag) return;
                    loadFlag = true;

                    var divs = jQuery('div[ext=' + index + ']'), m = new Array(divs.length);
                    if (!m.length) {
                        jQuery('#end_ext').show();
                        return ok();
