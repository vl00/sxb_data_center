                number: '请输入有效的数字',
                'valid-key': '请输入费用项目名称',
            });
            jQuery('#step5-form').validate({
                errorPlacement: function (error, element) {
                    error.appendTo(element.parent().find('span[data-valmsg-for]'));
                }
            });

