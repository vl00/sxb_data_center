        jQuery(function () {
           
            jQuery.validator.addMethod("number", function (value, element) {
                return value == '' || (jQuery.isNumeric(value) && parseFloat(value, 10) >= 0);
                //return (jQuery.isNumeric(value) && parseFloat(value, 10) >= 0);
