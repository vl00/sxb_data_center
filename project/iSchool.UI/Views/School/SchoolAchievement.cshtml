<div class="modal-header">
    <h5 class="modal-title" id="scrollmodalLabel">@ViewBag.ModalName</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<!-- 模态框主体 -->
<div class="modal-body">
    <div class="card">
        <div class="card-body">
            <div id="ach-content">
                <div class="form-group row">
                    <div class="col-md-6 bg-dark text-white  form-control-label">学校名称</div>
                    <div class="col-md-6  bg-dark text-white  form-control-label">录取人数</div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6 ">
                        <input type="text" class="form-control" value="耶鲁大学" />
                    </div>
                    <div class="col-md-6">
                        <input type="text" class="form-control" value="6" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6 ">
                        <input type="text" class="form-control" value="哈佛大学" />
                    </div>
                    <div class="col-md-6">
                        <input type="text" class="form-control" value="6" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-9"><a href="#" id="addAch" class="text-primary">添加</a></div>
            </div>
        </div>
        <div class="modal-footer">

            <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
        </div>
    </div>
</div>
<script type="text/javascript">
    jQuery(function () {
        jQuery("#addAch").on("click", function () {
            var html = "<div class='form-group row'>< div class='col-md-6 ' ><input type='text' class='form-control' value='哈佛大学' /> </div ><div class='col-md-6'> <input type='text' class='form-control' value='6' /></div> </div >";
            jQuery("#ach-content").append(html);
        });
    });
</script>
