
@{
    ViewData["Title"] = "详情";
}

<div class="col-sm-12">
    <div class="card">
        <div class="card-header">
            <a href="@Url.Action("Index")" style="font-size:42px" class="text-muted"><i class="fa fa-chevron-circle-left"></i></a>
        </div>
        <div class="card-body">
            <div class="row form-group ">
                <div class="col-md-8"></div>
                <div class="col-md-4 ">
                    <div class="input-group">
                        <input type="text" placeholder="请输入学校ID或学校名称" class="form-control">
                        <div class="input-group-btn"><button class="btn btn-secondary">检索</button></div>
                    </div>
                </div>
            </div>
            <table id="bootstrap-data-table-export" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="bootstrap-data-table-export_info">
                <thead>
                    <tr role="row">
                        <th class="sorting_asc" tabindex="0" aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 100px;">
                            学校ID
                        </th>
                        <th class="sorting" tabindex="0" aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 100px;">
                            学校名称
                        </th>
                        <th class="sorting" tabindex="0" aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 100px;">
                            编辑昵称
                        </th>
                        <th class="sorting" tabindex="0" aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 100px;">
                            编辑账号
                        </th>
                        <th class="sorting" tabindex="0" aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 100px;">
                            审核账号
                        </th>
                        <th class="sorting" tabindex="0" aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 100px;">
                            审核昵称
                        </th>
                        <th class="sorting" tabindex="0" aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 100px;">
                            完成度
                        </th>
                        <th class="sorting" tabindex="0" aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 120px;">
                            审核状态
                        </th>
                        <th class="sorting" tabindex="0" aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 100px;">
                            提交时间
                        </th>
                        <th class="sorting" tabindex="0" aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 100px;">
                            提交时间
                        </th>
                        <th class="sorting" tabindex="0" aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 100px;">
                            操作
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr role="row" class="odd">
                        <td>Airi Satou</td>
                        <td>Accountant</td>
                        <td>Tokyo</td>
                        <td>$162,700</td>
                        <td>123</td>
                        <td>$162,700</td>
                        <td>123</td>
                        <td class="status">
                            <span id="status-123"></span>
                            <select name="select" id="status-select-123" class="form-control">
                                <option value="0">待审核</option>
                                <option value="1">已发布</option>
                                <option value="2">需修改</option>
                            </select>
                        </td>
                        <td>123</td>
                        <td>123</td>
                        <td>
                            <a href="#" class="text-info">查看  </a> <br />
                            <a href="javascript:void(0)" class="text-info edit" data-sid="123">修改状态</a>
                            <a href="javascript:void(0)"
                               class="text-primary save" data-sid="123" style="display:none">完成</a>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="row">
                <div class="col-sm-12 col-md-5">
                    <div class="dataTables_info" id="bootstrap-data-table-export_info" role="status" aria-live="polite">
                        Showing 1 to 10 of 57 entries
                    </div>
                </div>
                <div class="col-sm-12 col-md-7">
                    <div class="dataTables_paginate paging_simple_numbers" id="bootstrap-data-table-export_paginate">
                        <ul class="pagination">
                            <li class="paginate_button page-item previous disabled" id="bootstrap-data-table-export_previous">
                                <a href="#" aria-controls="bootstrap-data-table-export" data-dt-idx="0" tabindex="0" class="page-link">Previous</a>
                            </li>
                            <li class="paginate_button page-item active">
                                <a href="#" aria-controls="bootstrap-data-table-export" data-dt-idx="1" tabindex="0" class="page-link">1</a>
                            </li>
                            <li class="paginate_button page-item ">
                                <a href="#" aria-controls="bootstrap-data-table-export" data-dt-idx="2" tabindex="0" class="page-link">2</a>
                            </li>
                            <li class="paginate_button page-item ">
                                <a href="#" aria-controls="bootstrap-data-table-export" data-dt-idx="3" tabindex="0" class="page-link">3</a>
                            </li>
                            <li class="paginate_button page-item "><a href="#" aria-controls="bootstrap-data-table-export" data-dt-idx="4" tabindex="0" class="page-link">4</a></li>
                            <li class="paginate_button page-item "><a href="#" aria-controls="bootstrap-data-table-export" data-dt-idx="5" tabindex="0" class="page-link">5</a></li>
                            <li class="paginate_button page-item "><a href="#" aria-controls="bootstrap-data-table-export" data-dt-idx="6" tabindex="0" class="page-link">6</a></li>
                            <li class="paginate_button page-item next" id="bootstrap-data-table-export_next"><a href="#" aria-controls="bootstrap-data-table-export" data-dt-idx="7" tabindex="0" class="page-link">Next</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        jQuery(function () {
            jQuery(".edit").on("click", function () {
                var sid = jQuery(this).attr("data-sid");
                jQuery("#status-" + sid).hide();
                jQuery("#status-select-" + sid).show();
                jQuery(this).siblings(".save").show();
                jQuery(this).hide();
            });
            jQuery(".save").on("click", function () {
                var sid = jQuery(this).attr("data-sid");
                //ajax请求
                //修改状态
                var value = jQuery("#status-select-" + sid).find("option:selected").text();
                jQuery("#status-" + sid).html(value);
                jQuery("#status-" + sid).show();
                jQuery("#status-select-" + sid).hide();
                jQuery(this).siblings(".edit").show();
                jQuery(this).hide();
            });
        });
    </script>
}