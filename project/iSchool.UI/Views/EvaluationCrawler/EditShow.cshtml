                            ReloadImg();

                        });

                    } else {
                        ShowAlert("上传失败:"+res.msg, -1);
                        CloseLoading();
                    }
                    CloseLoading();
                }).fail(function (res) {
                    ShowAlert("网络异常:"+res.msg, -1);
                    CloseLoading();
                });
            })
        }
       
