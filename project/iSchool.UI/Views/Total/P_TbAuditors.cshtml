@using iSchool.Application.Service.Totals;
@using iSchool.Infrastructure.Dapper;
@model PagedList<PageAuditorsQueryResult>
@{

}

@*审核人员列表*@
<div class="row">
    <div class="col-sm-12">
        <table class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="bootstrap-data-table-export_info">
            <thead>
                <tr role="row">
                    <th class="sorting" orderby="Username" tabindex="0" aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1" aria-label="Name: activate to sort column" style="width: 100px;">
                        账号
                    </th>
                    <th class="sorting" orderby="Username" tabindex="0" aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1" aria-label="Position: activate to sort column" style="width: 100px;">
                        昵称
                    </th>
                    <th class="sorting sorting_desc" orderby="AuditCount" tabindex="0" aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1" aria-label="Office: activate to sort column" style="width: 100px;">
                        审核数
                    </th>
                    <th class="sorting" orderby="AuditExtCount" tabindex="0" aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1" aria-label="Office: activate to sort column" style="width: 100px;">
                        审核数(学部)
                    </th>
                    <th class="" tabindex="0" aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1" aria-label="Salary: activate to sort column" style="width: 100px;">
                        操作
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CurrentPageItems)
                {
                    <tr role="row" class="odd">
                        <td>@(item.Account)</td>
                        <td>@(item.Username)</td>
                        <td>@(item.AuditCount)</td>
                        <td>@(item.AuditExtCount)</td>
                        <td><a href="/total/UserWorkInfo?uid=@(item.UserId)&type=2" class="text-info">详细  </a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-sm-12 col-md-3">
        <div class="dataTables_info" id="bootstrap-data-table-export_info" role="status" aria-live="polite">
            总共 @(Model.TotalItemCount) 条
        </div>
    </div>
    <div class="col-sm-12 col-md-9">
        <div class="dataTables_paginate paging_simple_numbers" id="bootstrap-data-table-export_paginate">
            @{ await Html.RenderPartialAsync("Pager1", Model); }
        </div>
    </div>
</div>